<h2 class="title-admin">Category</h2>

@model IEnumerable<symphony_limited.FrameWork.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<div id="menuLogin" styler style="font-family: sans-serif;color: #333;">
    <ul class="" style="float:right !important;">

        @if (Session["Email"] != null)
        {
            <li style="margin-right:80px"><a style="color:red;margin-top:;margin-right:200px">  @Session["Email"]</a></li>
            <li>@Html.ActionLink("Logout", "Logout", "LoginRegister")</li>
            <li style="color:black">@Html.ActionLink("Create New", "Create")</li>
        }
        else
        {
            <li>@Html.ActionLink("Signup", "Signup", "LoginRegister")</li>
            <li>@Html.ActionLink("Login", "Login", "LoginRegister")</li>
            <li style="color:black">@Html.ActionLink("Create New", "Create")</li>
        }
    </ul>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCategory)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameCategory)
        </td>
        <td class="edit">
            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId })
        </td>
        <td class="detail">
            @Html.ActionLink("Details", "Details", new { id = item.CategoryId })
        </td>
        <td class="delete">
            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
        </td>
    </tr>
}

</table>
