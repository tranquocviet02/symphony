<h2 class="title-admin">Academies</h2>

@model IEnumerable<symphony_limited.FrameWork.Academy>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div id="menuLogin" styler style="font-family: sans-serif;color: #333;">

    <ul class="" style="float:right !important;">

        @if (Session["Email"] != null)
        {
            <li style="margin-right:80px"><a style="color:red;margin-top:;margin-right:200px">  @Session["Email"]</a></li>
            <li>@Html.ActionLink("Logout", "Logout", "LoginRegister")</li>
            <li style="color:black">@Html.ActionLink("Create New", "Create")</li>
        }
        else
        {
            <li>@Html.ActionLink("Signup", "Signup", "LoginRegister")</li>
            <li>@Html.ActionLink("Login", "Login", "LoginRegister")</li>
            <li style="color:black">@Html.ActionLink("Create New", "Create")</li>
        }
    </ul>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PeopleManageme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fanpage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgAcademy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PeopleManageme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fanpage)
        </td>
        <td><img style="width:50px;height:50px" src="~/Upload/Academy/@item.ImgAcademy" /></td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
        <td class="edit">
            @Html.ActionLink("Edit", "Edit", new { id = item.AcademyId })
        </td>
        <td class="delete">
            @Html.ActionLink("Delete", "Delete", new { id = item.AcademyId })
        </td>
        </td>
    </tr>
    }

</table>
