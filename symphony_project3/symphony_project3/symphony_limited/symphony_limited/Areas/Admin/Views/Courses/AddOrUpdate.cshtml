@using symphony_limited.FrameWork 
@model Course

@{ 
    var x = Model;
    var y = Model;
}
<link rel="shortcut icon" href="/Assets/images/favicon.ico">
<!-- datepicker css -->
<link rel="stylesheet" href="/Assets/libs/flatpickr/flatpickr.min.css">

<!-- Bootstrap Css -->
<link href="/Asset/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
<!-- Icons Css -->
<link href="/Asset/css/icons.min.css" rel="stylesheet" type="text/css" />
<!-- App Css-->
<link href="/Asset/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />





<div class="row">
    <div class="card">
        <div class="card-body">
            <h3><b>New Blog</b></h3>
        </div>
        <div class="card-body" style="margin-top: -44px;">
            <form asp-action="AddOrUpdate" enctype="multipart/form-data" method="post" onsubmit="return validateForm()" class="createMG">
                    <div class="row">
                        <div class="form-group form-material col-xl-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="basicpill-phoneno-input"
                                               class="form-label">Tên Khoá Học :</label>
                                        <input type="text" class="form-control" placeholder="Enter Tiêu Đề" id="Tin" name="NameCourse"  value="@Model.NameCourse">
                                    </div>
                                </div><!-- end col -->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="basicpill-email-input"
                                               class="form-label">Giá Khoá Học :</label>
                                        <input type="text" class="form-control" placeholder="Enter Price" name="Price" id="Price" value="@Model.Price">
                                    </div>
                                </div><!-- end col -->
                            </div><!-- end row -->

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group mb-3">
                                        <label class="control-label">Trạng Thái :</label><br />
                                        <div class="row">
                                            <div class="col-lg-6">
                                                @Html.RadioButtonFor(m => m.Status, "yes", new { id = "", name = "Status" })
                                                <label>Yes</label>
                                            </div>
                                            
                                        </div>
                                        <div class="row">

                                            <div class="col-lg-6">
                                                @Html.RadioButtonFor(m => m.Status, "no", new { id = "", name = "Status" })
                                                <label>No</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="formFile" class="col-form-label">Upload File :</label>
                                    <div class="">
                                        <input class="form-control" placeholder="No file" type="file" id="uploadhinh" name="uploadhinh">

                                    </div>
                                </div>
                                <div class="mb-3" id="currentPhoto">
                                    <img alt="image" id="ShowImage" class="rounded mt-3" src="~/Upload/Course/@Model.Img" style="width:60px;height:38px;">
                                </div>
                            </div>

                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label for="example-date-input" class="col-form-label">Description :</label>
                                        <div>
                                            <input class="form-control" type="text" name="Description" value="@Model.Description" id="example-date-input">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label for="basicpill-address-input"
                                               class="form-label">Numberofsession :</label>
                                        <textarea id="ChiTiet" name="Numberofsession" class="form-control" placeholder="Enter Address" rows="2" value="@Model.Numberofsession"></textarea>
                                    </div>
                                </div><!-- end col -->
                            </div><!-- end row -->


                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group mb-3">

                                        <select class="form-control small" asp-for="@Model.TeacherId">
                                            <option value="0">Teacher</option>
                                            @if (ViewBag.ListTeacher != null)
                                            {
                                                foreach (Teacher item in ViewBag.ListTeacher)
                                                {
                                                    <option value="@item.TeacherId" @(item.TeacherId == @Model.TeacherId ? "selected" : "")>@item.NameTeachear</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="col-lg-6">
                                        <div class="form-group mb-3">
                                            <select class="form-control small" asp-for="@Model.CategoryId">
                                                <option value="0">NameCategory</option>
                                                @if (ViewBag.ListCategory != null)
                                                {
                                                    foreach (Category item in ViewBag.ListCategory)
                                                    {
                                                        <option value="@item.CategoryId" @(item.CategoryId == @Model.CategoryId ? "selected" : "")>@item.NameCategory</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <button class="btn btn-primary" type="submit">Submit form</button>
                            <button class="btn btn-success" type="reset">Reset form</button>


                        <div class="col-xl-3" style="margin-left:40px">
                            <div class="form-group mb-3">
                                <img src="/Asset/icon/create.png" alt="Girl in a jacket" width="550" height="550">
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="container">
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>


<!-- JAVASCRIPT -->
<script src="/Asset/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/Asset/libs/metismenujs/metismenujs.min.js"></script>
<script src="/Asset/libs/simplebar/simplebar.min.js"></script>
<script src="/Asset/libs/eva-icons/eva.min.js"></script>

<!-- gridjs js -->
<script src="/Asset/libs/gridjs/gridjs.umd.js"></script>

<script src="/Asset/js/pages/gridjs.init.js"></script>

<script src="/Asset/js/app.js"></script>

<script src="/Scripts/jquery-2.0.3.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        //
        $("#reset").click(function () {
            $(this).closest('form').find("input[type=text], textarea").val("");
        });
    });

</script>




