@using symphony_limited.FrameWork
@model Contact
@Html.AntiForgeryToken()

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<link rel="shortcut icon" href="/Assets/images/favicon.ico">
<!-- datepicker css -->
<link rel="stylesheet" href="/Assets/libs/flatpickr/flatpickr.min.css">

<!-- Bootstrap Css -->
<link href="/Asset/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
<!-- Icons Css -->
<link href="/Asset/css/icons.min.css" rel="stylesheet" type="text/css" />
<!-- App Css-->
<link href="/Asset/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="card">
        <div class="card-body">
            <h3><b>New Contact</b></h3>
        </div>
        <div class="card-body" style="margin-top: -44px;">
            <form asp-action="AddOrUpdate" enctype="multipart/form-data" method="post" onsubmit="return validateForm()" class="createMG">
                <div class="row">
                    <div class="form-group form-material col-xl-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-phoneno-input"
                                           class="form-label">FullName :</label>
                                    <input type="text" class="form-control" placeholder="Enter Tiêu Đề" id="FullName" name="Fullname" value="@Model.FullName">
                                </div>
                            </div><!-- end col -->
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="basicpill-email-input"
                                           class="form-label">Email :</label>
                                    <input type="text" class="form-control" placeholder="Enter Price" name="Email" id="Email" value="@Model.Email">
                                </div>
                            </div><!-- end col -->
                        </div><!-- end row -->

                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="example-date-input" class="col-form-label">Subject :</label>
                                <div>
                                    <input class="form-control" type="text" name="Subject" value="@Model.Subject" id="example-date-input">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="basicpill-address-input"
                                       class="form-label">message :</label>
                                <textarea id="ChiTiet" name="message" class="form-control" placeholder="Enter Message" rows="2" value="@Model.message"></textarea>
                            </div>
                        </div><!-- end col -->
                    </div><!-- end row -->


                </div>

                <button class="btn btn-primary" type="submit">Submit form</button>
                <button class="btn btn-success" type="reset">Reset form</button>

                <div class="col-xl-3 " style="float: right; margin-top: -350px !important;">
                    <div class="form-group mb-3">
                        <img src="/Asset/icon/create.png" alt="Girl in a jacket" width="550" height="550">
                    </div>
                </div>

                </div>


        

        <br />
        <div class="row">
            <div class="container">
            </div>
        </div>
        </form>
    </div>
</div>
</div>


<!-- JAVASCRIPT -->
<script src="/Asset/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/Asset/libs/metismenujs/metismenujs.min.js"></script>
<script src="/Asset/libs/simplebar/simplebar.min.js"></script>
<script src="/Asset/libs/eva-icons/eva.min.js"></script>

<!-- gridjs js -->
<script src="/Asset/libs/gridjs/gridjs.umd.js"></script>

<script src="/Asset/js/pages/gridjs.init.js"></script>

<script src="/Asset/js/app.js"></script>

<script src="/Scripts/jquery-2.0.3.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        //
        $("#reset").click(function () {
            $(this).closest('form').find("input[type=text], textarea").val("");
        });
    });

</script>




